<div class="row">     
    <div class="col-md-12">           
        <h2>Cars</h2>  
        <a href="/cars/add" class="btn btn-success pull-right">Add New Car</a>          
        <hr /> 
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>                     
                       <th>Car Make</th>
                       <th>Car Model</th>
                       <th>Car Year</th>
                       <th>Car Vin</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each cars}}
                    <tr>                 
                        <th><a href="/stores?retailer={{retailer}}">{{make}}</a></th>
                        <th>{{model}}</th>
                        <th><a href="/cars?year={{year}}">{{year}}</a></th>
                        <td><a href="/car/{{vin}}">{{vin}}</a></td>
                        <td><a href="/cars/delete/{{vin}}" class="btn btn-danger">remove</a></td>
                    </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
    </div>  
    {{#if message}}
    <div class="col-md-12 text-center">                 
        <strong>There was an error</strong>                
    </div>
    {{/if}}            
</div>