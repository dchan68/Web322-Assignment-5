    <div class="container">
      <div class="row">
        <div class="col-md-12">
        
            <h2>Add Car</h2>
            <br />
            <form method="post" action="/cars/add">
                <fieldset>
                    <legend>Car Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="first_name">Car Make:</label>
                                <input class="form-control" id="make" name="make"  label= "Car Model" type="text" />
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="last_name">Car Model:</label>
                                <input class="form-control" id="model" type= "text" name= "model" label= "Car Model"  />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phone">Car Year:</label>
                                <input class="form-control" id="year" type= "text" name= "year" label= "Car Year" />
                            </div>
                        </div>
                    </div>
                    
                </fieldset>
                <fieldset>
                    <legend>Vin Information</legend>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="vin">Vin :</label>
                                <input class="form-control"  id="vin" type= "text" name= "vin"  label= "Car Vin" required />
                            </div>
                        </div>
                </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Add Car" /><br /><br /><br />
    
            </form>
        </div>
      </div>
    </div>